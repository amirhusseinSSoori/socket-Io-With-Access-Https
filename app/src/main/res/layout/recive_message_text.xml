<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rel_chatF_message"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="6dp"
    android:layout_marginLeft="100dp"
    android:layout_marginRight="14dp"
    android:layout_marginTop="5dp"
    android:gravity="right">


    <RelativeLayout
        android:id="@+id/rel_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="8dp"
        android:background="@drawable/chat_message_user">


        <TextView
            android:id="@+id/txt_message_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="سلام به اقای دکتر عزیز"
            android:fontFamily="@font/vazir_light"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_message_send"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_model_chat_date_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:fontFamily="@font/vazir_medium_fd"
                android:layout_marginTop="4dp"
                android:text="12:11"/>



        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>